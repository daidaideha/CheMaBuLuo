<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingBottom="10dp" >
    
    <TextView 
        android:id="@+id/tv_car_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:textColor="@color/color_index_near_shop"
        android:text="浙A TJ548"/>
    
    <TextView 
        android:id="@+id/tv_car_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"
        android:textColor="@color/color_index_more"
        android:text="奥迪A6L 2014款 TFSI 标准款"
        android:layout_below="@+id/tv_car_number"/>
    
    <ImageView 
        android:id="@+id/iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/icon_change_uncheck" />

</RelativeLayout>
