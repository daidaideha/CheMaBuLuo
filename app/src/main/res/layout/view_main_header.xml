<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@mipmap/bg_index_homepage">

    <RelativeLayout
        android:id="@+id/rl_header_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:layout_marginLeft="15dp" >

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="西湖区"
            android:drawableLeft="@mipmap/icon_location"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:drawablePadding="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="59dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_index_box" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/tv_homeapge_search"
            android:drawablePadding="5dp"
            android:textSize="13dp"
            android:textColor="@color/color_index_box_text"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_header_message"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:paddingTop="12dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:src="@mipmap/icon_message"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="车马部落2.0正式上线啦！"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@color/color_index_box_message"
        android:textSize="13sp"
        android:drawableLeft="@mipmap/icon_notice"
        android:paddingLeft="15dp"
        android:drawablePadding="5dp"/>

</RelativeLayout>